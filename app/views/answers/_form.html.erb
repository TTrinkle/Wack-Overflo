<% if @answer.id %>
	<%= form_for @answer, url: "/questions/#{params[:id]}/answers/#{@answer.id}" do |f| %>
		<%= f.text_field :body  %>
		<%= f.submit %>
	<% end %>

<% else %>

	<%= form_for @answer, url: "/questions/#{params[:id]}/answers" do |f| %>
		<%= f.text_field :body  %>
		<%= f.submit %>
	<% end %>

