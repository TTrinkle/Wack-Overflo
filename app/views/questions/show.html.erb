<!-- could be a render with the questions and answers and comments on it -->
<span class='question-title'><%=@question.title%></span>
<% if logged_in? && current_user.id == @question.user_id%>
  <%= link_to "edit", edit_question_path%>
<%end%>
<div>Posted by <em><%=link_to @question.user.username, @question.user %></em> on <em><%= @question.created_at.strftime("%b %d, %Y") %></em></div>
<div class='div-votes'>
  <%= link_to '<i class="fa fa-2x fa-thumbs-o-up"></i>'.html_safe, like_question_path(@question), method: :put %>
  <br>
  <span class='vote-count'><%= @question.rating%></span>
  <br>
  <%= link_to '<i class="fa fa-2x fa-thumbs-o-down"></i>'.html_safe, dislike_question_path(@question), method: :put %>
</div>
<p class='question-body'><%=@question.body%></p>
<br>
<%= render partial: 'comments/form', locals: {id_type: "question", id: @question.id} %>
<% @question.comments.each do |comment| %>
  <%=comment.body%><br>
<% end %>
<br>
<br>
<h3>Answers</h3>
<%= render @question.answers %>
<p>Answer this question</p>
<%= render 'answers/form' %>
