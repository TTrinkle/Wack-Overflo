<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :username %>:
    <%= f.text_field :username, placeholder: 'please enter username', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>:
    <%= f.text_field :email, placeholder: 'please enter email', class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :password %>:
    <%= f.password_field :password, placeholder: 'please enter password', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit :class => 'btn btn-default' %>
  </div>
<% end %>
